extends layout

block everything
            .everything-div
              .searchbox
              each item in h.content
                .everything-div--inside
                  if item.support === true
                    span.entry-title= item.title  
                    br
                    hr
                    each item2 in item.content
                      li= item2
                    .remote-images--wrapper
                      each item3 in item.img
                        .remote-images
                          img(src=item3.src)
                    button.request-support-btn Request Support
                  else if item.video === true
                    span.entry-title= item.title
                    br
                    hr
                    video.everything-video(controls)
                      source(src=item.src type='video/mp4')
                  else
                    span.entry-title= item.title
                    br
                    hr
                    .everything-content--div
                      span= item.content