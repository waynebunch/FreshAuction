@import url('https://fonts.googleapis.com/css?family=Indie+Flower')

.bodyWrapper
  display: flex
  flex-direction: row 

.background-video
  display: flex
  flex-direction: column

.background-video>video
  max-height: 20%

.leftColumn, .rightColumn
  display: flex
  flex-direction: column
  flex: 1 

.middleColumn
  flex: 3 
  text-align: center

.articleWrapper
  border-bottom: 1px solid orangered

.title
  font-family: Verdana, Geneva, Tahoma, sans-serif
  font-size: 15px
  text-align: center

.newsTitle
  text-decoration: none

.newsDiv
  text-align: center

.image
  margin-top: 5px

.image--line
  max-height: 50px 